{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "lib",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": [
    "src/**/*",
    "src/assets",
    "declarations.d.ts",
    "src/declarations.d.ts",
    "./typings/**/*.d.ts"
  ]
}
